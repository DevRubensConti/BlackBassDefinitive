<script>
  // Galeria (garante que o DOM carregou)
document.addEventListener('DOMContentLoaded', () => {
  const mainImage = document.querySelector('.item-img');
  const thumbnails = Array.from(document.querySelectorAll('.thumbnail-list img'));
  const leftArrow = document.querySelector('.arrow.left');
  const rightArrow = document.querySelector('.arrow.right');

  let currentIndex = 0;

  function updateImage(index) {
    if (index < 0) index = thumbnails.length - 1;
    if (index >= thumbnails.length) index = 0;
    currentIndex = index;

    const newSrc = thumbnails[index].getAttribute('src');
    mainImage.setAttribute('src', newSrc);

    // Atualiza destaque das miniaturas
    thumbnails.forEach((t, i) => t.classList.toggle('active', i === index));
  }

  // Clique nas miniaturas
  thumbnails.forEach((thumbnail, idx) => {
    thumbnail.addEventListener('click', () => updateImage(idx));
  });

  // Setas
  leftArrow.addEventListener('click', () => updateImage(currentIndex - 1));
  rightArrow.addEventListener('click', () => updateImage(currentIndex + 1));

  // Inicia com a primeira imagem destacada
  updateImage(0);
});

</script>

