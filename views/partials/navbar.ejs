<script>
  const trigger  = document.getElementById("lojaTrigger");
  const dropdown = document.getElementById("dropdownMenu");

  if (trigger && dropdown) {
    const open  = () => { dropdown.style.display = "block"; trigger.setAttribute("aria-expanded","true"); };
    const close = () => { dropdown.style.display = "none";  trigger.setAttribute("aria-expanded","false"); };
    const toggle = () => (dropdown.style.display === "block" ? close() : open());

    trigger.addEventListener("click", (e) => {
      e.stopPropagation();
      toggle();
    });

    document.addEventListener("click", (e) => {
      if (!dropdown.contains(e.target) && !trigger.contains(e.target)) {
        close();
      }
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") close();
    });
  }
</script>

<script>
// Função para atualizar o mini cart sem fechar
async function atualizarMiniCart() {
  const res = await fetch('/api/carrinho');
  const data = await res.json();

  const container = document.getElementById("mini-cart-itens");
  container.innerHTML = ""; // limpa o conteúdo anterior

  // Função auxiliar para formatar em BRL
  const BRL = (v) => Number(v).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

  if (!data || data.length === 0) {
    container.innerHTML = "<p>Seu carrinho está vazio.</p>";
    return;
  }

  let total = 0;

  data.forEach(item => {
    const precoUnit = Number(item.produtos?.preco || 0);
    const qtd       = Number(item.quantidade || 1);
    const subtotal  = precoUnit * qtd;
    total += subtotal;

    const img = (item.produtos?.imagem_url || '').split(',')[0] || '/images/placeholder.png';

    const div = document.createElement("div");
    div.classList.add("mini-cart-item");
    div.innerHTML = `
      <img src="${img}" alt="Produto" onerror="this.onerror=null;this.src='/images/placeholder.png';">
      <div class="mini-cart-info">
        <p class="mini-cart-nome">${item.produtos?.nome || 'Produto'}</p>

        <p class="mini-cart-qtd">
          Qtd:
          <button class="btn-qtd" data-id="${item.id}" data-action="minus" type="button">-</button>
          <span class="qtd">${qtd}</span>
          <button class="btn-qtd" data-id="${item.id}" data-action="plus" type="button">+</button>
        </p>

        <p class="mini-cart-preco">
          <span>Unit.: ${BRL(precoUnit)}</span><br>
          <span>Subtotal: <strong>${BRL(subtotal)}</strong></span>
        </p>
      </div>
    `;
    container.appendChild(div);
  });

  // Rodapé com total geral
  const footer = document.createElement('div');
  footer.classList.add('mini-cart-total');
  footer.innerHTML = `
    <hr style="margin:8px 0;opacity:0.4;">
    <div class="linha-total" style="display:flex;justify-content:space-between;align-items:center;">
      <span>Total:</span>
      <strong>${BRL(total)}</strong>
    </div>
  `;
  container.appendChild(footer);

  // Reatribui os event listeners aos botões + e -
  // Reatribui os event listeners aos botões + e -
document.querySelectorAll(".btn-qtd").forEach(btn => {
  btn.addEventListener("click", async (e) => {
    e.stopPropagation(); // impede o fechamento do mini cart

    const id = btn.getAttribute("data-id");
    const action = btn.getAttribute("data-action");

    // Lê a qtd atual a partir do DOM
    const itemRoot = btn.closest(".mini-cart-item");
    const qtdSpan  = itemRoot?.querySelector(".qtd");
    const qtdAtual = Number(qtdSpan?.textContent || "1");

    try {
      if (action === "minus" && qtdAtual <= 1) {
        // Ao tentar ir de 1 -> 0, removemos o item
        await fetch(`/api/carrinho/${id}`, { method: "DELETE" });
      } else {
        // Fluxo normal de +/-
        await fetch(`/api/carrinho/${id}/${action}`, { method: "POST" });
      }
    } catch (err) {
      console.error("Erro ao atualizar carrinho:", err);
    }

    await atualizarMiniCart(); // atualiza sem fechar
  });
});

}

// Event listener do botão carrinho para abrir/fechar
document.getElementById("btn-carrinho").addEventListener("click", async (e) => {
  e.preventDefault();
  const miniCart = document.getElementById("mini-cart");

  if (miniCart.classList.contains("hidden")) {
    await atualizarMiniCart(); // carrega itens ao abrir
    miniCart.classList.remove("hidden");
  } else {
    miniCart.classList.add("hidden");
  }
});

// Fechar o mini cart ao clicar fora
document.addEventListener("click", function(event) {
  const miniCart = document.getElementById("mini-cart");
  const btnCarrinho = document.getElementById("btn-carrinho");
  if (!miniCart.contains(event.target) && !btnCarrinho.contains(event.target)) {
    miniCart.classList.add("hidden");
  }
});
</script>

